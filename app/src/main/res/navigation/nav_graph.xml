<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listNoteFragment">

    <fragment
        android:id="@+id/listNoteFragment"
        android:name="android.dev.kalmurzaeff.notesapp.ui.list.ListNoteFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_list_notes">
        <action
            android:id="@+id/navigateToAddFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/navigateToDetailFragment"
            app:destination="@id/detailNoteFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_listNoteFragment_to_fragmentOnBoarding"
            app:destination="@id/fragmentOnBoarding"
            app:launchSingleTop="true"
            app:popUpTo="@id/listNoteFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="android.dev.kalmurzaeff.notesapp.ui.add.AddNoteFragment"
        android:label="Add note"
        tools:layout="@layout/fragment_add_note"/>
    <fragment
        android:id="@+id/detailNoteFragment"
        android:name="android.dev.kalmurzaeff.notesapp.ui.detail.DetailNoteFragment"
        android:label="Detail note"
        tools:layout="@layout/fragment_detail_note">
        <action
            android:id="@+id/navigateToUpdateFragment"
            app:destination="@id/updateNoteFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="android.dev.kalmurzaeff.notesapp.ui.update.UpdateNoteFragment"
        android:label="Update note"
        tools:layout="@layout/fragment_update_note">
        <action
            android:id="@+id/navigateToListFragment"
            app:destination="@id/listNoteFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/fragmentOnBoarding"
        android:name="android.dev.kalmurzaeff.notesapp.ui.onboard.OnBoardFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboard" >
        <action
            android:id="@+id/action_fragmentOnBoarding_to_listNoteFragment"
            app:destination="@id/listNoteFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/fragmentOnBoarding"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="android.dev.kalmurzaeff.notesapp.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="android.dev.kalmurzaeff.notesapp.ui.bookmark.BookmarksFragment"
        android:label="Bookmarks"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_bookmarksFragment_to_detailNoteFragment"
            app:destination="@id/detailNoteFragment" />
    </fragment>
</navigation>